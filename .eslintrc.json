{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "google"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "object-curly-spacing": "off",
    "require-jsdoc": "off",
    "indent": ["error", 2],
    "comma-dangle": ["error", "only-multiline"],
    "operator-linebreak": ["error", "before"]
  }
}
