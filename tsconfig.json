{
  "compilerOptions": {
    "target": "es2021",
    "lib": [
      "es2021"
    ],
    "module": "commonJS",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "app/*": [
        "src/*"
      ],
      "tests/*": [
        "tests/*"
      ]
    },
    "types": [
      "node",
      "express",
      "@types/jest",
      "inversify",
      "jsonwebtoken",
      "reflect-metadata"
    ],
    "typeRoots": [
      "./custom_typings/express"
    ],
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "coverage",
    "node_modules"
  ]
}
